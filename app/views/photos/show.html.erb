
<div class="card photo-form">
  <div class="card-header">
    Фотография
  </div>
  <div class="card-block">

<p>
  <%= image_tag @photo.image.url(:large) %> <br/>
  <strong><%= @photo.description %></strong>
  <br>
  <%= @photo.user.email if @photo.user %>
</p>

<% if @photo.user == current_user && user_signed_in? %>
	<%= link_to 'Edit', edit_photo_path(@photo) %> |
  <%= link_to 'Destroy', @photo, method: :delete, data: { confirm: 'Are you sure?' } %> |

<% end %>

<%= link_to 'Back', photos_path %>

</div>
</div>