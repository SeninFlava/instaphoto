<div class="jumbotron">


<h1>Listing Photos</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Email</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.description %></td>
        <td><%= photo.user.email unless photo.user.nil? %></td>

        <td><%= link_to 'Show', photo %></td>
        <% if photo.user == current_user && user_signed_in? %>
          <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
          <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td/>
          <td/>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Photo', new_photo_path, class: "btn btn-primary" %>
<% end %>

</div>>